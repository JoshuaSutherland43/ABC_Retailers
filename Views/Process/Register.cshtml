@model CLDV_POE.Models.Process
@{
    var users = ViewData["User"] as List<CLDV_POE.Models.User>;
    var products = ViewData["Product"] as List<CLDV_POE.Models.Product>;
}
<h1>Register</h1>

@if (users == null || users.Count == 0 || products == null || products.Count == 0)
{
    <div class="alert alert-warning">
        No users or products available. Please ensure they are added first.
    </div>
}
else
{
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="User_ID">Select a User</label>
            <select asp-for="User_ID" class="form-control"
                    asp-items="@(new SelectList(users, "User_Id", "User_Name"))">
                <option value="">-- Select User --</option>
            </select>
            <span asp-validation-for="User_ID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product_ID">Select a Product</label>
            <select asp-for="Product_ID" class="form-control"
                    asp-items="@(new SelectList(products, "Product_Id", "Product_Name"))">
                <option value="">-- Select Product --</option>
            </select>
            <span asp-validation-for="Product_ID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Process_Location"></label>
            <input asp-for="Process_Location" class="form-control" />
            <span asp-validation-for="Process_Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Process_Date"></label>
            <input asp-for="Process_Date" class="form-control" type="datetime-local" />
            <span asp-validation-for="Process_Date" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit Process</button>
    </form>
}
